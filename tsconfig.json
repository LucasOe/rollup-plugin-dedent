{
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		/* Base Options: */
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2019",
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,

		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		/* Transpilation */
		"module": "NodeNext",
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true
	}
}
